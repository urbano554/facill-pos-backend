{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "lib": ["ES2022"],
    "moduleResolution": "Node16",
    "rootDir": "src",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@config": ["./config.ts"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"],
      "@schemas/*": ["schemas/*"],
      "@routes": ["routes/index"],
      "@models/*": ["models/*"],
      "@middlewares/*": ["middlewares/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["src/**/*", "__tests__/**/*"]
}
